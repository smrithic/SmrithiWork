package searching;

import java.util.Random;
import objectOrientedProgramming.Circle;
import objectOrientedProgramming.Rectangle;

import java.util.ArrayList;

public class CircleSearch {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Random generator = new Random();
		ArrayList<Circle> shapes = new ArrayList<Circle>();
		int min = 0;
		int max = 10;
		int randomNum = 0;
		int counter = 0;
		boolean contains = false;
		for (int i = 0; i < 100; i++) {
			randomNum = min + generator.nextInt(max - min + 1);
			shapes.add(new Circle(randomNum));
		}
		
		randomNum = min + generator.nextInt(max - min + 1);
		for (int i= 0; i< shapes.size(); i++) {
			if (shapes.get(i).getRadius() == 2 ) {
				contains = true;
				counter++;
				break;
			}
		}
		System.out.println("Is " + 2 + " a radius in a Circle object? " + contains + " it is contained in the array " + counter + " times");

	}

}
